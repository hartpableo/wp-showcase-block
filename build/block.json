{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/hart-showcase-block",
  "version": "0.1.0",
  "title": "Custom Showcase Block",
  "category": "design",
  "icon": "cover-image",
  "description": "Custom Lightweight and Flexible Showcase Block.",
  "supports": {
    "html": false,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "blockID": {
      "type": "string"
    },
    "imgID": {
      "type": "number"
    },
    "imgSrc": {
      "type": "string",
      "default": "https://placehold.co/2000x900"
    },
    "imgAlt": {
      "type": "string"
    },
    "imgWidth": {
      "type": "string"
    },
    "imgHeight": {
      "type": "string"
    },
    "imgSrcset": {
      "type": "string"
    },
    "imgSizes": {
      "type": "string"
    },
    "headline": {
      "type": "string",
      "default": "Hello World!"
    },
    "subHeadline": {
      "type": "string",
      "default": "Lorem ipsum dolor sit amet consectetur adipiscing elit"
    },
    "headlineTag": {
      "type": "string",
      "default": "p"
    },
    "contentPosition": {
      "type": "string"
    }
  },
  "textdomain": "hart-showcase-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}